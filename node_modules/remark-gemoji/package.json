{
  "name": "remark-gemoji",
  "version": "6.0.0",
  "description": "remark plugin to turn gemoji shortcodes (`:+1:`) into emoji (`üëç`)",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "github",
    "gemoji",
    "emoji",
    "short-code",
    "shortcode"
  ],
  "repository": "remarkjs/remark-gemoji",
  "bugs": "https://github.com/remarkjs/remark-gemoji/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "gemoji": "^6.0.0",
    "unist-util-visit": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark": "^13.0.0-alpha.1",
    "remark-cli": "^8.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "xo": "^0.33.0"
  },
  "scripts": {
    "format": "remark . -qfo --ignore-pattern test && prettier . --write && xo --fix",
    "build-bundle": "browserify . -s remarkGemoji > remark-gemoji.js",
    "build-mangle": "browserify . -s remarkGemoji -p tinyify > remark-gemoji.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/explicit-length-check": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/prefer-optional-catch-binding": "off"
    },
    "ignores": [
      "remark-gemoji.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
